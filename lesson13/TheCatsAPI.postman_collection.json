				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Valid JSON\", () => {",
							"    pm.expect(() => pm.response.json()).to.not.throw();",
							"});",
							"",
							"const json = pm.response.json();",
							"",
							"pm.test(\"Image ID exists\", () => {",
							"    pm.expect(json.id, \"image id must exist\").to.exist;",
							"    pm.expect(json.id).to.not.be.empty;",
							"});",
							"",
							"// Save to collection variable",
							"pm.collectionVariables.set(\"image_id\", json.id);",
							"",
							"pm.test(\"Image ID saved\", () => {",
							"    pm.expect(pm.collectionVariables.get(\"image_id\")).to.exist;",
							"});",
