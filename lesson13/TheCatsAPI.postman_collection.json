				{
					"listen": "test",
					"script": {
						"exec": [
							"let favourites = pm.response.json();",
							"",
							"pm.test(\"Favourites loaded\", () => {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Image is in favourites\", () => {",
							"    let id = pm.environment.get(\"image_id\");",
							"    let found = favourites.some(f => f.image_id === id);",
							"    pm.expect(found).to.be.true;",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
